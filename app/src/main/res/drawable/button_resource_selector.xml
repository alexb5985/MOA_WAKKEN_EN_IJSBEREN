<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#686868"
    tools:targetApi="lollipop">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#686868" />
            <stroke
                android:width="2dp"
                android:color="#000" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#000"
                android:endColor="#2d2d2d"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#fff" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</ripple>
